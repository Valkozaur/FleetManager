# Gmail Poller Configuration
# Copy this file to .env and update with your values

# Gmail API Configuration
GMAIL_CREDENTIALS_FILE=./credentials.json

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Application Configuration
DATA_DIR=./data
LOG_DIR=./logs
MAX_EMAILS=10
EMAIL_QUERY=is:unread
LOG_LEVEL=INFO
OUTPUT_FILE=./data/emails.json

# Docker Configuration (uncomment for Docker deployment)
# GMAIL_CREDENTIALS_FILE=/app/credentials.json
# DATA_DIR=/app/data
# LOG_DIR=/app/logs
# OUTPUT_FILE=/app/data/emails.json

# Optional: Email filters
# EMAIL_QUERY=from:specific@domain.com
# EMAIL_QUERY=subject:"Order Confirmation"