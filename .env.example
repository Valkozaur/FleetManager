# FleetManager root environment variables (copy to .env and edit)

# PostgreSQL Database
POSTGRES_USER=fleetmanager
POSTGRES_PASSWORD=fleetmanager_dev
POSTGRES_DB=fleetmanager
DATABASE_URL=postgresql://fleetmanager:fleetmanager_dev@db:5432/fleetmanager

# Google / Gmail
GOOGLE_SHEETS_SPREADSHEET_ID=
GOOGLE_MAPS_API_KEY=

# GitHub Container Registry
GHCR_USERNAME=
GHCR_TOKEN=

# Runtime
LOG_LEVEL=INFO
# FleetManager Environment Configuration
# Copy this file to .env and update with your values

# API Keys (Required)
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Sheets Database Configuration (Required)
GOOGLE_SHEETS_SPREADSHEET_ID=your_google_sheets_spreadsheet_id_here
GOOGLE_SHEETS_RANGE_NAME=Sheet1!A:Z

# Google Service Account Configuration (Required)
GOOGLE_SERVICE_ACCOUNT_FILE=/app/credentials/service-account.json
GMAIL_DELEGATED_USER_EMAIL=user@yourdomain.com

# Application Configuration
DATA_DIR=/app/data
LOG_LEVEL=INFO

# Testing Configuration (set to 'true' for testing)
TEST_MODE=false
TEST_EMAIL_QUERY=

# Production Notes:
# - Use GitHub Secrets for API keys in production
# - Service account must have domain-wide delegation enabled
# - Mount credentials directory as Docker volume containing service-account.json
# - Ensure proper file permissions on service account file

# Optional: Email filters for testing
# TEST_EMAIL_QUERY=from:specific@domain.com
# TEST_EMAIL_QUERY=subject:"Order Confirmation"

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=email-processor